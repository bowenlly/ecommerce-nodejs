<% include _header %> 

  <style>
.steps-wrap .step {
    width: 100%;
    text-align: center;
    position: relative;
    flex-grow: 1;
    font-size: 14px;
    line-height: 24px;
}
    .steps-wrap {
    list-style: none;
    margin: 0;
    padding: 0;
    margin-top: 30px;
    position: relative;
    display: flex;
    border-radius: 30px;
}
.steps-wrap .step:before {
    background-color: #ccd1d6;
    height: 4px;
    position: absolute;
    content: " ";
    width: 100%;
    right: 50%;
    top: 10px;
}
    .steps-wrap .step.active:after {
    background: #00a524;
    height: 4px;
    position: absolute;
    content: " ";
    z-index: 5;
    width: 50%;
    right: 0%;
    top: 10px;
}
.steps-wrap .icon {
    color: #fff;
    display: inline-block;
    position: relative;
    z-index: 10;
    width: 24px;
    height: 24px;
    border-radius: 24px;
    text-align: center;
    background: #ccd1d6;
}
    .steps-wrap .step.active .icon {
    background: #00a524;
    color: #fff;
}
    .steps-wrap .text {
    display: block;
    padding-top: 5px;
    text-align: center;
    color: #9da1a7;
}
    .steps-wrap .step:first-child:before {
    display: none;
}
  </style>
                  
  
